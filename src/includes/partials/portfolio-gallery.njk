
<div class="tob-gallery tob-grid-{{ gallery.grid }}">
  {% for workItem in gallery.items %}
    <div class="tob-gallery-item">
       <div class="tob-gallery-item-background">
        <span class="tob-gallery-item-background__top-left"></span>
        <span class="tob-gallery-item-background__bottom-left"></span>
        <span class="tob-gallery-item-background__top-right"></span>
        <span class="tob-gallery-item-background__bottom-right"></span>
      </div>

    {% set workImg = "assets/img/work/" + workItem.img %}

    {% if workItem.video %}
      {% video workItem.video, workImg, workItem.style %}

    {% else %}

      {% set style = "" %}
      {% if workItem.style.position %}
        {% set style = style + "object-position: " + workItem.style.position + ";" %}
      {% endif %}

      {% if workItem.style.pixelated %}
        {% set style = style + "image-rendering: pixelated;" %}
      {% endif %} 

      <img src="{{ workImg }}" 
        aria-label="{{ workItem.name }}" 
        alt="{{ workItem.name }}"
        {% if style %}
        style="{{ style }}"
        {% endif %} 
      />

      <div class="tob-gallery-item-desc">
      </div>
    {% endif %}

    </div>
  {% endfor %}
</div>